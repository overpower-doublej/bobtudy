<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/riBehindMenuScroll" >

    <LinearLayout
        style="@style/behindMenuScrollContent"
        android:orientation="vertical"
        android:background="#ff4433"
        android:paddingTop="25dp" >

    <LinearLayout
        style="@style/behindMenuScrollContent"
        android:orientation="vertical"
        android:background="#ff6633"
        android:layout_margin="8sp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="5sp"
            android:text="====================================="
            android:textColor="#ff4433"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/currentBoBtudy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="  현재 참가중인 밥터디"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/BoBtudyHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="  예전 밥터디 기록"
            android:textColor="#ffffff"
            android:textSize="22dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="5sp"
            android:text="=========================================================================="
            android:textColor="#ff4433"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/myInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="  나의 정보"
            android:textColor="#ffffff"
            android:textSize="22dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="5sp"
            android:text="=========================================================================="
            android:textColor="#ff4433"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="  로그아웃"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="5sp"
            android:text="====================================="
            android:textColor="#ff4433"
            android:textSize="10dp" />

    </LinearLayout>
